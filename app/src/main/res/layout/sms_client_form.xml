<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/accent_material_light"
            style="@style/Base.DialogWindowTitle.AppCompat"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Отправить СМС при завершении стирки?"
                android:id="@+id/textView7"
                android:textIsSelectable="false"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/primary_text_default_material_dark"
                android:textStyle="bold"
                style="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            style="@android:style/Widget.ImageWell"
            android:background="@drawable/dialog_smsclient"  />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView"
                    android:background="@color/background_material_light"
                    android:layout_gravity="left|top">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Вы получите СМС уведомление, когда стирка будет завершена.  "
                            android:id="@+id/textView"
                            android:layout_margin="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="@color/secondary_text_default_material_light"
                            android:textAlignment="gravity" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="phone"
                            android:ems="10"
                            android:id="@+id/Phone"
                            android:text="+79997776655"
                            android:enabled="true"
                            android:textColor="@color/abc_primary_text_material_light"
                            android:layout_gravity="center_horizontal"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                            android:background="@color/bright_foreground_disabled_material_dark"
                            android:paddingTop="10dp"
                            android:visibility="visible"
                            android:singleLine="true"
                            style="@android:style/Widget.Holo.Light.EditText"
                            android:selectAllOnFocus="true"
                            android:textIsSelectable="true" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Введите номер телефона"
                            android:id="@+id/textView2"
                            android:textColor="@color/primary_dark_material_light"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:singleLine="false"
                            style="@style/TextAppearance.AppCompat.Subhead"
                            android:paddingBottom="10dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textView6"
                            android:textColor="@color/secondary_text_default_material_light"
                            style="@style/TextAppearance.AppCompat.Small"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_margin="10dp"
                            android:baselineAligned="true"
                            android:padding="10dp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Отмена"
                                android:id="@+id/button2"
                                android:background="@color/background_material_light"
                                android:enabled="true"
                                android:textColor="@color/accent_material_light"
                                style="@style/Base.Widget.AppCompat.Button.Borderless"
                                android:textSize="@dimen/abc_text_size_button_material" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Отправить"
                                android:id="@+id/button3"
                                android:background="@color/background_material_light"
                                style="@style/Base.Widget.AppCompat.Button.Borderless"
                                android:textColor="@color/accent_material_light" />
                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>